                    <label for="enterY">Введите координату Y: </label>
                    <input type="number" id="enterY">
                </div>
                <div class="coordinates">
                    <label for="enterZ">Введите координату Z: </label>
                    <input type="number" id="enterZ">
                </div>
                <div class="name">
                    <label for="enterName">Введите название вектора: </label>
                    <input type="text" id="enterName">
                </div>
                <div class="createVector">
                    <input type="submit" value="СОЗДАТЬ" onclick="createVector()">
                    <input type="submit" value="ОБНОВИТЬ" onclick="updateTable()">
                </div>
            </div>
            <div class="printData">
                    <table>
                        <caption>Созданные вектора</caption>
                        <tbody id="tableBody">
                            <tr>
                                <th>Название</th>
