                    <label for="firstName">Введите название первого вектора: </label>
                    <input type="text" id="firstName">
                </div>
                <div class="enterSecondName">
                    <label for="secondName">Введите название второго вектора: </label>
                    <input type="text" id="secondName">
                </div>
                <div class="performOperation">
                    <input type="submit" onclick="addVectors()" value="СЛОЖИТЬ">
